        <div class="vehicles">
          <%- @vehicles.each do |vehicle| -%>
          <article class="vehicle">
            <%- if !vehicle.image.empty? -%>
            <a href="/admin/<%= @dealership.slug %>/<%= vehicle.slug %>/edit">
              <img class="vehicle-image"
                   src="<%= vehicle.image.thumb.url %>"
                   alt="" />
            </a>
            <%- end -%>
            <h2 class="vehicle-title">
              <!-- TODO: remove link if image exists -->
              <a href="/admin/<%= @dealership.slug %>/<%= vehicle.slug %>/edit">
                <span class="vehicle-name"><%= vehicle.name %></span>
                <span class="vehicle-price"><%= vehicle.price %></span>
              </a>
            </h2>
            <h2 class="vehicle-delete">
              <a href="/admin/<%= @dealership.slug %>/<%= vehicle.slug %>/delete">
                Delete This Vehicle
              </a>
            </h2>
          </article>
          <%- end -%>
        </div>
